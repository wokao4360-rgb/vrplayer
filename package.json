    "tiles:ktx2": "node scripts/convert-tiles-ktx2.mjs"
  },
  "dependencies": {
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "sharp": "^0.33.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
